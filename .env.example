#--------------------------------------------------------------
# LOGÍSTICAJUS - Variáveis de Ambiente
# Copie este arquivo para .env e ajuste os valores
#--------------------------------------------------------------

APP_NAME="LogísticaJus"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=America/Sao_Paulo
APP_URL=http://localhost:8080
APP_LOCALE=pt_BR

#--------------------------------------------------------------
# Banco de Dados MySQL
#--------------------------------------------------------------
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=logisticajus
DB_USERNAME=logisticajus
DB_PASSWORD=secret

#--------------------------------------------------------------
# Cache, Session e Queue (Redis)
#--------------------------------------------------------------
CACHE_STORE=redis
SESSION_DRIVER=redis
SESSION_LIFETIME=120
QUEUE_CONNECTION=redis

REDIS_CLIENT=phpredis
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

#--------------------------------------------------------------
# Email (Mailpit para desenvolvimento)
#--------------------------------------------------------------
MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="sistema@allissonsousa.adv.br"
MAIL_FROM_NAME="${APP_NAME}"

#--------------------------------------------------------------
# Logging
#--------------------------------------------------------------
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

#--------------------------------------------------------------
# FilamentPHP
#--------------------------------------------------------------
FILAMENT_FILESYSTEM_DISK=public

#--------------------------------------------------------------
# Google Calendar (Configurar na Sprint 4)
#--------------------------------------------------------------
GOOGLE_CALENDAR_ID=
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=http://sistema.allissonsousa.adv.br/google/callback

#--------------------------------------------------------------
# WhatsApp Business API (Configurar na Fase 2)
#--------------------------------------------------------------
WHATSAPP_API_TOKEN=
WHATSAPP_PHONE_NUMBER_ID=
WHATSAPP_BUSINESS_ACCOUNT_ID=

#--------------------------------------------------------------
# Asaas Payment Gateway (Configurar na Fase 2)
#--------------------------------------------------------------
ASAAS_API_KEY=
ASAAS_ENVIRONMENT=sandbox
ASAAS_WEBHOOK_TOKEN=

#--------------------------------------------------------------
# Backup
#--------------------------------------------------------------
BACKUP_DISK=local
BACKUP_NOTIFICATION_EMAIL=admin@allissonsousa.adv.br

